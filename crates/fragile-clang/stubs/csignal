// Minimal csignal stub for fragile parsing
#ifndef _FRAGILE_CSIGNAL_
#define _FRAGILE_CSIGNAL_

#include "cstdint"

// Signal numbers (Linux)
#define SIGINT 2
#define SIGILL 4
#define SIGABRT 6
#define SIGFPE 8
#define SIGSEGV 11
#define SIGTERM 15
#define SIGHUP 1
#define SIGQUIT 3
#define SIGTRAP 5
#define SIGKILL 9
#define SIGPIPE 13
#define SIGALRM 14
#define SIGUSR1 10
#define SIGUSR2 12
#define SIGCHLD 17
#define SIGCONT 18
#define SIGSTOP 19
#define SIGTSTP 20
#define SIGTTIN 21
#define SIGTTOU 22

// Special signal handler values
#define SIG_DFL ((void(*)(int))0)
#define SIG_IGN ((void(*)(int))1)
#define SIG_ERR ((void(*)(int))-1)

// Signal handler type
typedef void (*sig_t)(int);

namespace std {

// Signal handler type
using sig_atomic_t = int;

// Signal functions
void (*signal(int sig, void (*handler)(int)))(int);
int raise(int sig);

} // namespace std

using std::sig_atomic_t;
using std::signal;
using std::raise;

#endif // _FRAGILE_CSIGNAL_
